!!! xml
feed(xmlns="http://www.w3.org/2005/Atom")
  title(type="text") #{site.name}
  updated #{updated.format("isoUtcDateTime")}
  id #{site.full_hostname}
  link(rel="alternate", type="text/html", href="http://" + site.full_hostname + "/")
  link(rel="self", type="application/atom+xml", href="http://" + site.full_hostname + "/feed.atom")

  author
    name #{site.admins[0].firstname} #{site.admins[0].lastname}

  - if(posts.length)
    != partial('post', posts)
