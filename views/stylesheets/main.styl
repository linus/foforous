@css {
  @import url(//fonts.googleapis.com/css?family=Covered+By+Your+Grace);
}

has-layout()
  display inline-block
  &
    display block

clearfix()
  has-layout
  overflow hidden

body
  font-size 100%
  line-height 1.5em
  padding 1em
  font 1em/1.3 "Helvetica Neue", Helvetica, "Lucida Grande", Arial, sans-serif
  font-weight lighter
  text-shadow 2px 1px 2px rgba(0,0,0,0.2)
  color black
  background #fbf9f5

  a
    text-decoration none
    color black
    &:hover
      text-decoration underline
      color #333

  ul
    margin 0
    padding 0
    list-style none

  form#update
    text-align center
    margin-top 10em
    button
      background red
      color white
      font 1em/1.3 "Helvetica Neue", Helvetica, "Lucida Grande", Arial, sans-serif
      font-size 3em

  #notices
    position absolute
    width 100%
    top 0
    left 0
    .notice
      padding 0.5em 1.5em
      color rgba(255, 255, 255, 0.9)
      text-shadow 1px 1px rgba(0, 0, 0, 0.5)
      border-style solid
      border-width 0 0 1px 0
      &.info
        background green
        border-color green - #333
      &.warning
        background yellow
        border-color yellow - #333
      &.error
        background red
        border-color red - #333
      .close
        float right
        font-weight bold
        color rgba(0, 0, 0, 0.5)
        text-shadow 1px 1px rgba(255, 255, 255, 0.3)
        &:hover
          text-decoration none

  #container
    width 940px
    margin 0 auto
    overflow hidden
    a.prev
      position fixed
      left 0.25em
      top 240px
      font-size 6em
      font-weight bold
      &:hover
        text-decoration none
        top 242px
    a.next
      position fixed
      right 0.25em
      top 240px
      font-size 6em
      font-weight bold
      &:hover
        text-decoration none
        top 242px
    section#posts
      width 10000em
      article
        width 940px
        overflow hidden
        float left
        header, section.content, footer, ul.images li
          padding 0 204px
        ul.images
          width 10000em
          li
            float left
            position relative
            font-family 'Covered By Your Grace', sans-serif
            color rgba(255, 255, 255, 0.7)
            img
              vertical-align top
              background rgba(0, 0, 0, 0.9)
              padding 1em 1em 7em
              box-shadow 1px 1px 5px #666
            h2
              position absolute
              bottom 1em
              left 250px
              text-shadow none
        a.prev, a.next
          font-size 100%
          position relative
          top -6em
          color rgba(255, 255, 255, 0.7)
          text-shadow none
        a.prev
          left 220px
        a.next
          left 686px

  header.main
    margin 0 auto
    width 960px
    h1 a
      display block
      text-indent -10000em
      background-image url(http://fofoflanelle.com/fashion-de-fofo-flanelle.png)
      height 121px
      width 960px

  footer
    font-size 0.8em
    font-weight normal
    &.main
      margin 1.5em auto 0
      width 940px
      text-align center
      span
        margin 0 0.5em
